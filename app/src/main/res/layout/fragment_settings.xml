<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settingsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settingsFragmentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!-- TODO: Visually appealing title to replace current -->
        <TextView
            android:id="@+id/settingsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="18sp"
            android:textColor="#000000"
            android:textAlignment="center"
            android:padding="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/profileButton" />

        <!--TODO: Replace button with drawable -->
        <Button
            android:id="@+id/profileButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROFILE TEMP"
            app:layout_constraintBottom_toTopOf="@id/boardSizeSpinner"
            app:layout_constraintEnd_toStartOf="@id/customizeButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/settingsTitle" />

        <!--TODO: Replace button with drawable -->
        <Button
            android:id="@+id/customizeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CUSTOMIZE TEMP"
            app:layout_constraintBottom_toTopOf="@id/boardSizeSpinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/profileButton"
            app:layout_constraintTop_toBottomOf="@id/settingsTitle" />

        <TextView
            android:id="@+id/boardSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Board Size:"
            android:textSize="16sp"
            android:textColor="#000000"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintBottom_toTopOf="@id/winCondition"
            app:layout_constraintEnd_toStartOf="@+id/boardSizeSpinner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileButton" />

        <Spinner
            android:id="@+id/boardSizeSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@id/winConditionSpinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileButton" />

        <TextView
            android:id="@+id/winCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Win Condition:"
            android:textSize="16sp"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/winConditionSpinner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/boardSize" />

        <!--TODO: Replace button with drawable -->
        <Spinner
            android:id="@+id/winConditionSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/boardSizeSpinner"
            app:layout_constraintStart_toStartOf="@id/boardSizeSpinner"
            app:layout_constraintTop_toBottomOf="@id/boardSizeSpinner" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>